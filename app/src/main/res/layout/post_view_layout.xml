<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/curve_shape">


        <ImageView
            android:id="@+id/post_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_profilepicture2" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/post_image"
            android:fontFamily="@font/roboto"
            android:text="Good Morning Decadev"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_body"
            android:layout_width="293dp"
            android:layout_height="77dp"
            android:layout_below="@+id/post_title"
            android:layout_toEndOf="@+id/post_image"
            android:fontFamily="@font/roboto"
            android:text="@string/post_body"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:text="User Id:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_body"
            android:layout_alignEnd="@+id/post_image"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@id/userid"
            android:text="user123"
            android:textColor="@color/teal_200"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="136dp"
            android:layout_height="20dp"
            android:layout_below="@id/post_body"
            android:layout_marginStart="161dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@id/post_image"
            android:text="Comment" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>